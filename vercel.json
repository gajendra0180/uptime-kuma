{
  "version": 2,
  "buildCommand": "npm run build",
  "installCommand": "npm ci",
  "framework": null,
  "rewrites": [
    {
      "source": "/socket.io/(.*)",
      "destination": "/api/index.js"
    },
    {
      "source": "/(.*)",
      "destination": "/api/index.js"
    }
  ],
  "env": {
    "NODE_ENV": "production",
    "DATA_DIR": "/tmp"
  },
  "functions": {
    "api/index.js": {
      "maxDuration": 300,
      "memory": 1024
    }
  }
}

